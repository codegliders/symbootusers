{% extends '::base.html.twig' %}

{% block title %}
    Aggiungi utente
{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('css/style.css') }}" type="text/css" rel="stylesheet" />
    <link href="//code.jquery.com/ui/1.11.1/themes/smoothness/jquery-ui.css" type="text/css" rel="stylesheet" />
    <link href="{{ asset('plugins/jQueryUI/jquery-ui-multiselect/css/ui.multiselect.css')}}" type="text/css" rel="stylesheet" />
    <link href="{{ asset('plugins/lou-multi-select/css/multi-select.css')}}" type="text/css" rel="stylesheet" />

{% endblock %}
{% block javascripts %}
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js" ></script>

    <script type="text/javascript" src="//code.jquery.com/ui/1.11.1/jquery-ui.js"></script>


    <script src="{{ asset('plugins/lou-multi-select/js/jquery.multi-select.js')}}"></script>
    <script >
        $(function() {
            $("#userform_role").selectmenu({width: 230});
             
             
            $("#userform_groups").multiSelect({'cssClass':'multiselect_add_user_groups'});
        });

    </script>
{% endblock %}

{% block body %}
    <div class="form-div">
        <div class="form-title">
            Aggiungi utente
        </div>
        <br>
        {{ form_errors(form.email) }}{{ form_errors(form.username) }}
        {{ form_start (form) }}
        <div class="form-even">
            Nome utente
        </div>
        <div class="form-odd">
            {{ form_widget(form.username) }}
        </div>

        <div class="clear"></div>
        <br/>
        <div class="form-even">
            {#{ form_label(form.role) }#} Ruolo
        </div>
        <div class="form-odd">
            {{ form_widget(form.role) }}
        </div>

        <div class="clear"></div>
        <br/>
        <div class="form-even">
            Email
        </div>
        <div class="form-odd">
            {{ form_widget(form.email) }}
        </div>

        <div class="clear"></div>
        <br/>
        <div class="form-even">
            Password
        </div>
        <div class="form-odd">
            {{ form_widget(form.password) }}
        </div>
        <div class="clear"></div>
        <br/>
        <div class="form-even">
            Gruppi
        </div>
        <div class="form-odd">
            <div>
                {{ form_widget(form.groups) }}</div>
        </div>
        <!--Managing jquery multiselect dimensions-->
        <div class="userform_add_group_spacer" style=""></div>

        <div class="form-even">
            Attivo
        </div>
        <div class="form-odd">
            {{ form_widget(form.isActive) }}
        </div>
        <div class="clear"></div>
        <br/>
        <div class="form-even">
            &nbsp;
        </div>
        <div class="form-odd">
            {{ form_widget(form.cancel) }}
            {{ form_widget(form.save) }}
        </div>
        <div class="clear"></div>
        {{ form_end(form) }}
    </div>
{% endblock%}