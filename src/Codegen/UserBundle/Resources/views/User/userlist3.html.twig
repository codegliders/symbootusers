                        {{ form_widget(formadd.role) }}

                    </div>

                    <div class="checkbox">


                        <label> 

                            {{ form_widget(formadd.isActive) }} Attivo
                        </label>

                    </div>


                </div>
                <div class="modal-footer">


                    {{ form_widget(formadd.cancel) }}
                    {{ form_widget(formadd.save) }}
                </div>

            </div>
        </div>
        {{ form_end(formadd) }}
