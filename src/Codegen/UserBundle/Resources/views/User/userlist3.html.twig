                    </div>

                    <div class="form-group">

                        <label>   Email</label>


                        {{ form_widget(formadd.email) }} {{ form_errors(formadd.email) }}

                    </div>
                    <div class="form-group">

                        <label>  Password</label>


                        {{ form_widget(formadd.password) }}

                    </div>
                    <div class="form-group">

                        <label>  Gruppi</label>


                        {{ form_widget(formadd.groups) }}

                    </div>
                    <div class="form-group">

