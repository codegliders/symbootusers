{% block body %}
    {{form_start(formedit)}}
    <div class="modal-dialog modal-lg">

        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                    <span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">
                    <span class="glyphicon glyphicon-user blue">

                    </span>
                    &nbsp;&nbsp;Modifica utente</h4>
            </div>
            <div class="modal-body" style="height: 430px;">

                <div style="clear:both;padding:10px;">
                    <div id="editmodalleft" style="float:left;width:50%;padding-left: 10px;padding-right: 10px;">

                        <div class="form-group">

                            <label> Nome</label>

                            {{ form_widget(formedit.firstname) }} {{ form_errors(formedit.firstname) }}

                        </div>
                        <div class="form-group">
                            <label> Login</label>

                            {{ form_widget(formedit.username) }} {{ form_errors(formedit.username) }}

                        </div>
                        <!--div class="form-group">

                            <label>  Password</label>

                        {#{ form_widget(formedit.password) }#}

                    </div-->

                        <div class="form-group">

                            <label> Ruolo</label>


                            {{ form_widget(formedit.role) }}

                        </div>

                        <div class="form-group">


                            <label> 

                                Attivo &nbsp; {{ form_widget(formedit.isActive) }} 
                            </label>

                        </div>
                    </div>

                    <div id="editmodalright" style="float:left;width:50%;padding-left: 10px;padding-right: 10px;">

                        <div class="form-group">
                            <label> Cognome</label>

                            {{ form_widget(formedit.lastname) }} {{ form_errors(formedit.lastname) }}

                        </div>


                        <div class="form-group">

                            <label>   Email</label>

                            <div class="input-group">
                                <span class="input-group-addon">@</span>
                                {{ form_widget(formedit.email) }} {{ form_errors(formedit.email) }}
                            </div>

                        </div>
                        <div class="form-group">

                            <label>  Gruppi</label>
                            <div>

                                {{ form_widget(formedit.groups) }}
                            </div>

                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                {{ form_widget(formedit.cancel) }} 
                {{ form_widget(formedit.save) }} 

            </div>

        </div>
    </div>
    {{form_end(formedit)}}
{% endblock%}