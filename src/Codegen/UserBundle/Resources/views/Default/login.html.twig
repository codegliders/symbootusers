<!doctype HTML!>

<html>
    <head>
        <title>CodeGliders User Manager</title>
        {% block stylesheets %}
            <link href="{{ asset('css/style.css') }}" type="text/css" rel="stylesheet" />
        {% endblock %}
    </head>
    <body style="background-color:#4F76A3;font-face:'Trebuchet'">
        <div id="login-form">
            <span class="header-subtitle" style="padding-left:0px;font-size:22px;" >Code Gliders Lab:: Login</span>
        
            <br>
            <form  action="{{ path('login_check')}}" method="post"> 
                <div style="color:#fff">
                    Username: </div>
                <div><input type="text" name="_username"></div>
                <div style="color:#fff">Password: </div>
                <div><input type="password" name="_password"></div>
             
                <div><input type="hidden" name="_target_path" value="userlist2" /></div>
 <div><input type="submit" value="Submit"> </div>
            </form>
        </div>
    </body>
