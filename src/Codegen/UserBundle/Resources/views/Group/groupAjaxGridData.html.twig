{%if groups | length ==0%}
    <tr>
        <td colspan="7" align="center" style="padding-top:40px;font-style: italic">Nessun risultato trovato</td>
    </tr>
    {% else %}
{% for group in groups %}
    <tr>
        <td>{{group.id}}</td>
        <td>{{group.name}}</td>
        <td>{{group.description}}</td>
        <td> <span class="badge" style="background-color:#428bca">{{group.accesslevel}}</span></td>
       
        <td>
            <!--button class="btn btn-default view" data-toggle="modal" data-target="#viewUserModal"--> 
            <span data-toggle="modal" data-id="{{ group.id}}" data-target="#viewModal" title="Visualizza" id="viewRecord{{ group.id}}" class="glyphicon glyphicon-eye-open blue"></span>
        <!--/button-->&nbsp;
       
          
            <span data-toggle="modal" data-id="{{ group.id}}" data-target="#editModal"  title="Modifica" id="editRecord{{ group.id}}" class="glyphicon glyphicon-edit blue"></span>&nbsp;
           
            <span data-toggle="modal" title="Elimina" data-id="{{ group.id}}" id="deleteRecord{{ group.id}}" data-target="#delGroupModal"  title="Elimina" class="glyphicon glyphicon-remove-circle blue del"></span>
        </td>
    </tr>
{% endfor %}

{% endif %}


