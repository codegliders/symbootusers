{%if roles | length ==0%}
    <tr>
        <td colspan="7" align="center" style="padding-top:40px;font-style: italic">Nessun risultato trovato</td>
    </tr>
    {% else %}
{% for role in roles %}
    <tr>
        <td>{{role.id}}</td>
        <td>{{role.name}}</td>
        <td>{{role.description}}</td>
        <td> <span class="badge" style="background-color:#428bca">{{role.accesslevel}}</span></td>
       
        <td>
            <!--button class="btn btn-default view" data-toggle="modal" data-target="#viewUserModal"--> 
            <span data-toggle="modal" data-id="{{ role.id}}" data-target="#viewModal" title="Visualizza" id="viewRecord{{ role.id}}" class="glyphicon glyphicon-eye-open blue"></span>
        <!--/button-->&nbsp;
       
          
            <span data-toggle="modal" data-id="{{ role.id}}" data-target="#editModal"  title="Modifica" id="editRecord{{ role.id}}" class="glyphicon glyphicon-edit blue"></span>&nbsp;
           
            <span data-toggle="modal" title="Elimina" data-id="{{ role.id}}" id="deleteRecord{{ role.id}}" data-target="#delUserModal"  title="Elimina" class="glyphicon glyphicon-remove-circle blue del"></span>
        </td>
    </tr>
{% endfor %}

{% endif %}


